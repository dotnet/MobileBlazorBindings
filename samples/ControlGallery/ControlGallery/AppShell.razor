<Shell Title="Shell Title">
    <TabBar Title="TabBar Title">
        <Tab Title="Tab Title">
            <ContentPage Title="Adder">
                <Button OnClick="AddTab">Add Tab</Button>
            </ContentPage>
        </Tab>

        @for (int i = 0; i < count; i++)
        {
            var currentIndex = i;
            <ShellTab Title="@($"Tab number {currentIndex}")" />
        }
    </TabBar>
</Shell>

@code {
    int count = 1;

    void AddTab()
    {
        count++;
    }
}
