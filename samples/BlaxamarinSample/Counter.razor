@inject AppState AppState

    <StackLayout>
        <Label FontSize="30" FontAttributes="FontAttributes.Italic" Text="@("You have pressed " + AppState.Counter + " times")" />
        <Button Text="+1" OnClick="@HandleClick" />
    </StackLayout>

@code {
    void HandleClick()
    {
        AppState.Counter++;
    }
}
