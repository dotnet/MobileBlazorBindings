@inject ShellNavigationManager NavigationManager
<ContentPage>
    <ScrollView>
        <StackLayout>
            @foreach (var animal in MonkeyData.Monkeys)
            {
                <AnimalTemplate Animal="animal" OnClick="AnimalClicked" />
            }
        </StackLayout>
    </ScrollView>
</ContentPage>

@code {
    async Task AnimalClicked(Animal animal)
    {
        await NavigationManager.NavigateToAsync($"/monkeydetails/{animal.Name}");
    }
}