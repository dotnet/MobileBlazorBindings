@inject ShellNavigationManager NavigationManager

<ContentPage>
    <ScrollView>
        <StackLayout>
            @foreach (var animal in MobileBlazorBindingsXaminals.Data.BearData.Bears)
            {
                <AnimalTemplate Animal="animal" OnClick="AnimalClicked"></AnimalTemplate>
            }
        </StackLayout>
    </ScrollView>
</ContentPage>


@code {
    async Task AnimalClicked(Animal animal)
    {
        System.Diagnostics.Debug.WriteLine($"Open details for {animal.Id}");
        await NavigationManager.NavigateToAsync($"/beardetails/{animal.Id}");
    }
}